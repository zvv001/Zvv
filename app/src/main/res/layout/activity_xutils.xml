<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zvv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3400ff00"
    tools:context=".Activity.XUtilsActivity">

    <com.vv.zvv.Utils.ZvvTopBar
        android:id="@+id/zvvTopBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        zvv:leftBackGroundZvvTopBar="@color/ffa141"
        zvv:leftTextColorZvvTopBar="@color/z292929"
        zvv:leftTextSizeZvvTopBar="5sp"
        zvv:leftTitleZvvTopBar="返回"
        zvv:rightBackGroundZvvTopBar="@color/ffa141"
        zvv:rightTextColorZvvTopBar="@color/z292929"
        zvv:rightTextSizeZvvTopBar="5sp"
        zvv:rightTitleZvvTopBar="更多"
        zvv:titleTextColorZvvTopBar="@color/aeaeae"
        zvv:titleTextSizeZvvTopBar="5sp"
        zvv:titleZvvTopBar="自定义ZvvTopBar"/>

    <com.vv.zvv.Views.MyTextView
        android:id="@+id/tv_title_XUtilsActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/zvvTopBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="xUtils MyTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/iv_xUtilsImage_XUtilsActivity"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_title_XUtilsActivity"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@mipmap/iv_null"/>

    <Button
        android:id="@+id/btn_xUtilsHttpREquest_XUtilsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="请求数据"/>

    <Button
        android:id="@+id/btn_modify_XUtilsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_xUtilsHttpREquest_XUtilsActivity"
        android:text="修改MainActivity中的数据"/>

    <Button
        android:id="@+id/btn_gotoBroadcastActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_modify_XUtilsActivity"
        android:text="跳转到BroadcastActivity"/>

</RelativeLayout>
